<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nikhil.detectcall.MainActivity">

    <EditText
        android:id="@+id/SenderEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="92dp"
        android:hint="Sender Email" />

    <EditText
        android:id="@+id/Email_Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SenderEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="71dp"
        android:hint="Password"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/ReceiverEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Email_Password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:hint="Receiver Email" />

    <Button
        android:id="@+id/Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/Email_Password"
        android:layout_below="@+id/ReceiverEmail"
        android:layout_marginTop="45dp"
        android:text="Save" />


</RelativeLayout>
